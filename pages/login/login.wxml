<view class="container">
  <view class="login-icon">
    <image class="login-img" src="#"></image>
  </view>
  <view class="login-from">

    <!--账号-->
    <view class="inputView">
      <image class="nameImage" src="../../static/images/name.png"></image>
      <label class="loginLab">账号</label>
      <input class="inputText" placeholder="请输入账号" bindinput="usernameInput" />
    </view>
    <view class="line"></view>

    <!--密码-->
    <view class="inputView">
      <image class="keyImage" src="../../static/images/key.png"></image>
      <label class="loginLab">密码</label>
      <input class="inputText" password="true" placeholder="请输入密码" bindinput="passwordInput" />
    </view>

    <!--按钮-->
    <view class="loginBtnView">
      <button class="loginBtn" type="primary" size="mini" loading="{{loading}}" plain="{{plain}}"
        disabled="{{disabled}}" bindtap="login">登录</button>

      <button class="registerBtn" type="primary" size="mini" loading="{{loading}}" plain="{{plain}}"
        bindtap="register">立即注册</button>
    </view>
    <view class="visitorView">
      <view class="visitorBtn" bindtap="visitor">游客访问</view>
      </view>
    </view>
  
</view>